<%= form_for @snippet, :html => { :multipart => true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :tag %>
  <%= f.text_field :tag %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :weight %>
  <%= f.text_field :weight %>
    <%= f.submit "Create snippet", class: "btn btn-large btn-primary" %>

  <%= f.label :content %>
  <%= f.text_area :content, :cols => 20, class: 'content_field' %>
  
<% end %>