<%= form_for @link, :html => { :multipart => true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :url %>
  <%= f.text_field :url %>
  
  <%= f.label :tag %>
  <%= f.text_field :tag %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :month_and_year %>
  <%= f.text_field :month_year %>

  <%= f.label :image %>
  <%= f.file_field :link_image %>

  <%= f.submit "Create Link", class: "btn btn-large btn-primary" %>
<% end %>
