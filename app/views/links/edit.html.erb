<%= form_for @link do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :url %>
  <%= f.text_field :url %>
  
  <%= f.label :tag %>
  <%= f.text_field :tag %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :image %>
  <%= f.file_field :link_image %>

  <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
<% end %>